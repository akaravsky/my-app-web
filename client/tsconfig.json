{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "ts-build",
    "baseUrl": "./client/src", //for non relative paths
    "typeRoots": [
      "./node_modules/@types"
    ],
    "jsx": "react",
    "target": "es2015",
    "lib": [
      "es2017",
      "dom"
    ],
    "watch": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "**/*.js"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.less"
  ]
}